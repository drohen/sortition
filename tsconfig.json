{
    "compilerOptions": {
        "target": "esnext",
        "allowJs": true,
        "skipLibCheck": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": false,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "lib": ["esnext"],
        "outDir": "build"
    },
    "include": ["src/**/*.ts"]
}
